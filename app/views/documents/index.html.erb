<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Documents</h1>
<%= link_to 'Submit New', new_document_path %>
<table class ="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Per from</th>
      <th>Per to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= link_to 'View', document,class: "btn btn-primary" %></td>
        <td><%= document.name %></td>
        <td><%= document.description %></td>
        <td><%=image_tag document.image.url(:thumb)%></td>
        <td><%= document.per_from %></td>
        <td><%= document.per_to %></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>